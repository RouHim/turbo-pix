{
  "name": "turbo-pix",
  "version": "0.1.0",
  "description": "Fast photo indexer and viewer",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RouHim/turbo-pix.git"
  },
  "scripts": {
    "format": "prettier --write \"static/**/*.{js,css}\"",
    "format:check": "prettier --check \"static/**/*.{js,css}\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --no-warn-ignored \"static/**/*.js\"",
    "lint:js:fix": "eslint --no-warn-ignored --fix \"static/**/*.js\"",
    "lint:css": "stylelint \"static/**/*.css\"",
    "lint:css:fix": "stylelint --fix \"static/**/*.css\"",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run format",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
